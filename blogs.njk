<body>

    <div class="wrapper">
        <header id="header">
            <div class="header-container">
                <div class="header-content">
                    <div class="menu__nav">
                        <a href="/" class="header__logo">
                            <img class="header__logo-img" src="{{ '/assets/images/Logo_mezon_light.png' | url }}"
